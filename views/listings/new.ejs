<%layout("/layouts/boilerplate")%>
<br />
<br />
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form
      method="post"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input
          name="listing[title]"
          placeholder=" enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks Good !</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter a valid description</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-lable">Uploade image</lable>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-lable">Price</lable>
          <input
            name="listing[price]"
            placeholder=" 1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter a valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <lable for="country" class="form-lable">country</lable>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter a valid Country Name</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-lable">location</lable>
        <input
          name="listing[location]"
          placeholder="Jaipur,Rajasthan"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter a valid location</div>
      </div>

      <div class="mb-3">
        <label for="Category" class="form-label">Category</label>
        <select
          class="form-select form-select-sm"
          aria-label="Small select example"
          required
        >
          <div class="invalid-feedback">Please choose category!</div>
          <option value="Trending">Trending</option>
          <option value="Iconic">Iconic cities</option>
          <option value="Rooms">Rooms</option>
          <option value="Castle">Castle</option>
          <option value="Mountains">Mountains</option>
          <option value="Camping">Camping</option>
          <option value="Amazing pools">Amazing pools</option>
          <option value="Farms">Farms</option>
          <option value="Arctic">Artic</option>
          <option value="Lake">Lake</option>
        </select>
      </div>
      <button class="btn btn-dark add-btn">Add</button>
      <br />
      <br />
    </form>
  </div>
</div>
